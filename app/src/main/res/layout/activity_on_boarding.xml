<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ru.mitapp.contacts.ui.first.OnBoardingActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.first.OnBoardingActivity">

        <TextView
            android:id="@+id/greetengs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, What is your name?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:textSize="24sp"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/getName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/greetengs"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/getName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>